{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Kernel",
            "dependsOn": [
                "Compile ASM Sources"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "command": "./build.sh"
        },

        {
            "label": "Debug",
            "dependsOn":[
                "Build Kernel",
            ],
            "type": "shell",
            "isBackground": true,
            "command": "./qemu.gdb.sh",
        },

        {
            "label": "Run",
            "dependsOn":[
                "Build Kernel",
            ],
            "group": "test",
            "type": "shell",
            "isBackground": true,
            "command": "./qemu.sh",
        }
    ]
}