{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Kernel",
            "dependsOn": [
                "Compile ASM Sources"
            ],
            "type": "shell",
            "group": "build",
            "problemMatcher": "$gcc",

            "command": "./build.sh"
        },

        {
            "label": "Launch QEMU (i386)",
            "dependsOn":[
                "Build Kernel",
            ],
            "type": "shell",
            "isBackground": true,
            "command": "./qemu.i386.sh",
        },

        {
            "label": "Launch QEMU (x86_64)",
            "dependsOn":[
                "Build Kernel",
            ],
            "type": "shell",
            "isBackground": true,
            "command": "./qemu.x86_64.sh",
        }
    ]
}