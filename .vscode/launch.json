    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "gdb",
            "request": "attach",
            "executable": "./chernos.elf",
            "target": ":1234",
            "remote": true,
            "preLaunchTask": "Debug",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Debug (Don't launch qemu)",
            "type": "gdb",
            "request": "attach",
            "executable": "./chernos.elf",
            "target": ":1234",
            "remote": true,
            "cwd": "${workspaceRoot}"
        }
    ]
}